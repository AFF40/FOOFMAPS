<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clientes.restaurantes.MainActivity"
    android:orientation="vertical"
    android:background="@color/white"
    style="@style/Theme.AppCompat.NoActionBar"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOODMAPS"
        android:textSize="35dp"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        >
    </TextView>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/foodmapsicon"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        >
    </ImageView>
    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INICIAR SESION"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:gravity="center"
        >
    </TextView>
    <EditText
        android:drawableStart="@drawable/baseline_person_24"
        android:id="@+id/tv_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:background="@drawable/bordeform"
        android:gravity="left"
        android:hint="Usuario:"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColorHint="@color/black"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:inputType="text"
        >
    </EditText>
    <EditText
        android:drawableStart="@drawable/baseline_key_24"
        android:id="@+id/tv_pass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:background="@drawable/bordeform"
        android:gravity="left"
        android:hint="ContraseÃ±a: "
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:padding="10dp"
        android:inputType="textPassword">
    </EditText>
    <Button
        android:id="@+id/btn_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/rojo"
        android:text="Ingresar"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        >
    </Button>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="No tienes una cuenta aun ?"
        >
    </TextView>
    <TextView
        android:id="@+id/tv_reg"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#002BFF"
        android:textSize="20sp"
        android:text="Click aqui para crear una"
        >
    </TextView>
</LinearLayout>