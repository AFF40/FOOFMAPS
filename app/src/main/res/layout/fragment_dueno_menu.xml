<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".clientes.restaurantes.MenuRest"
    android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:paddingBottom="10dp"
        >
        <LinearLayout
            android:id="@+id/añadirplato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:layout_gravity="start"
            android:paddingStart="0dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/agregaricon"
                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Añadir plato"
                android:textColor="@color/white"
                android:textSize="20sp"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/actualizarlistaplatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/actualizar_icon"
            >
        </ImageView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/editarplato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:layout_gravity="end"
            android:layout_marginEnd="30dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/editaricon"
                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="editar plato"
                android:textColor="@color/white"
                android:textSize="20sp"
                >
            </TextView>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- Agrega el RecyclerView para la lista de platos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewPlatos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:background="@drawable/bordeform"/>
</LinearLayout>
