<!-- res/layout/activity_menu_rest.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MenuRest">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bannertop"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Restaurante Detalles">

        <!-- Agregar una vista personalizada con un ImageView a la izquierda -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- ImageView para la imagen del restaurante -->
            <ImageView
                android:id="@+id/imageViewRestaurante"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <!-- Agregar un botón de WhatsApp a la derecha -->
        <ImageButton
            android:id="@+id/btnWhatsApp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_whatsapp"
            android:contentDescription="Botón de WhatsApp"
            android:scaleType="fitXY"
            android:layout_gravity="end"
            android:background="@android:color/transparent"/>

    </androidx.appcompat.widget.Toolbar>

    <!-- ImageView para el logo -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start" />

    <!-- Mostrar los datos -->
    <TextView
        android:id="@+id/textViewRestauranteId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID del Restaurante: " />

    <TextView
        android:id="@+id/textViewCelular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de Teléfono: " />

</LinearLayout>
