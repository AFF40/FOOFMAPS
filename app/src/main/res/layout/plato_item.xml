<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"

    android:background="@drawable/item_border"> <!-- Utilizamos un recurso de dibujable para el borde -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
    <!-- ImageView para la imagen del plato -->
    <ImageView
        android:id="@+id/imageViewPlato"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="15dp">

        <!-- TextView para la descripciÃ³n del plato -->
        <TextView
            android:id="@+id/nom_plato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nombre del plato"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/desc_plato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="descripcion plato"
            android:textSize="16sp"
            android:paddingTop="10dp"
            />


    </LinearLayout>
        <!-- TextView para el precio del plato -->


        <TextView
            android:id="@+id/precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_gravity="bottom"
            android:background="@drawable/item_border"
            android:padding="5dp"
            />

    </LinearLayout>
</LinearLayout>
